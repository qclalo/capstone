<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".OneDeviceFragment">


    <Button
        android:id="@+id/delete_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_color"
        android:text="@string/delete_device"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.898" />

    <Button
        android:id="@+id/add_device_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_color"
        android:text="@string/add_device"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <Button
        android:id="@+id/device_button1"
        android:layout_width="357sp"
        android:layout_height="309sp"
        android:backgroundTint="@color/button_color"
        android:text="@string/no_text"
        android:textColor="@color/button_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/purple_500" />

    <TextView
        android:id="@+id/username_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:elevation="8dp"
        android:text="@string/placeholder"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toTopOf="@+id/severity_icon1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.995" />

    <TextView
        android:id="@+id/deviceid_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:text="@string/placeholder"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@+id/device_button1"
        app:layout_constraintEnd_toEndOf="@+id/username_text1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/username_text1"
        app:layout_constraintTop_toTopOf="@+id/severity_text1"
        app:layout_constraintVertical_bias="0.921" />

    <ImageView
        android:id="@+id/severity_icon1"
        android:layout_width="224dp"
        android:layout_height="196dp"
        android:elevation="8dp"
        android:src="@drawable/ic_healthy_severity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/healthy_icon_color" />

    <TextView
        android:id="@+id/severity_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:text="@string/placeholder"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toTopOf="@+id/severity_icon1"
        app:layout_constraintEnd_toEndOf="@+id/username_text1"
        app:layout_constraintStart_toStartOf="@+id/username_text1"
        app:layout_constraintTop_toBottomOf="@+id/username_text1" />

</androidx.constraintlayout.widget.ConstraintLayout>